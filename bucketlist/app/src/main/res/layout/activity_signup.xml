<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signUp_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edit_name"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="write your name"
                android:layout_marginBottom="25dp"
                android:drawableLeft="@drawable/icon_user"
                android:drawablePadding="7dp"
                android:ems="10"
                android:inputType="textPersonName"
                />


            <EditText
                android:id="@+id/edit_email"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="write your e-mail"
                android:layout_marginBottom="25dp"
                android:drawableLeft="@drawable/icon_email"
                android:drawablePadding="7dp"
                android:ems="10"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="write phone number"
                android:layout_marginBottom="25dp"
                android:drawableLeft="@drawable/icon_phone"
                android:drawablePadding="7dp"
                android:ems="10"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/edit_pw"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="write password"
                android:layout_marginBottom="25dp"
                android:drawableLeft="@drawable/icon_pw"
                android:drawablePadding="7dp"
                android:ems="10"
                android:inputType="textPassword"/>
            <EditText
                android:id="@+id/edit_pw_confirm"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="confirm password"
                android:layout_marginBottom="25dp"
                android:drawableLeft="@drawable/icon_pw"
                android:drawablePadding="7dp"
                android:ems="10"
                android:inputType="textPassword"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have you an account?"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/go_sign_in"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="20dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/signup_btn"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:text="SIGN UP"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/radius"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/icon_signUp_facebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/facebook"
                android:layout_marginRight="35dp"
                />

            <ImageView
                android:id="@+id/icon_signUp_google"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/google" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>